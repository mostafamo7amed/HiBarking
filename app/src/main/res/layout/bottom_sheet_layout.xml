<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

   >

    <RelativeLayout android:layout_width="match_parent"
                     android:layout_height="wrap_content"
        android:background="@color/white"
        >
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="50dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/icon"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/name_layout"
            android:layout_below="@+id/icon">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/garage_name"
                android:textColor="@color/grean"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/bottomsheet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:gravity="center"
                android:textColor="@color/grean"
                android:textSize="@dimen/_20sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/space_layout"
            android:layout_below="@id/name_layout">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:text="@string/empty_space"
                android:textColor="@color/grean"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/bottomsheet_apace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/no_space"
                android:gravity="center"
                android:textColor="@color/grean"
                android:textSize="@dimen/_20sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/price_layout"
            android:layout_below="@id/space_layout">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/price"
                android:textColor="@color/grean"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/bottomsheet_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_5"
                android:gravity="center"
                android:textColor="@color/grean"
                android:textSize="@dimen/_20sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/rate_layout"
            android:layout_below="@id/price_layout">

            <TextView
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rate"
                android:textColor="@color/grean"
                android:paddingStart="@dimen/_10sdp"
                android:textSize="@dimen/_20sdp"
                />

            <TextView
                android:id="@+id/bottomsheet_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_0"
                android:gravity="center"
                android:textColor="@color/grean"
                android:textSize="@dimen/_20sdp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@id/rate_layout"
            android:id="@+id/book_layout">


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/user_main_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape"
                android:text="@string/book"
                android:textColor="@color/white"/>
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>