<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".driver.user_account.create_account"
    android:background="?attr/background_color">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/ic_tilt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <androidx.cardview.widget.CardView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="end|bottom"
        android:layout_margin="10dp"
        android:background="@android:color/darker_gray"
        app:cardCornerRadius="12.5dp"
        app:layout_constraintEnd_toEndOf="@id/create_account_image"
        app:layout_constraintBottom_toBottomOf="@id/create_account_image"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/darker_gray"
            android:src="@drawable/ic_baseline_add_24"
            android:contentDescription="TODO" />
    </androidx.cardview.widget.CardView>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/create_account_image"

        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/profile_image"
        app:civ_border_color="?attr/background_green"
        app:civ_border_width="2dp"

        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintVertical_bias="0.385" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="?attr/background_color"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/create_account_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_username"
                android:hint="name"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="?attr/text_color"
                android:textSize="20sp"
                android:background="@drawable/edittext_shape"
                android:layout_margin="10dp"
                android:padding="15dp"
                android:inputType="text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_id"
                android:hint="id"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="?attr/text_color"
                android:textSize="20sp"
                android:inputType="number"
                android:background="@drawable/edittext_shape"
                android:layout_margin="10dp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/create_account_username"
                >
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_phone"
                android:hint="phone number"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="?attr/text_color"
                android:textSize="20sp"
                android:inputType="phone"
                android:background="@drawable/edittext_shape"
                android:layout_margin="10dp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/create_account_id"
                >
            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/create_account_licence"
                android:hint="Licence"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="?attr/text_color"
                android:textSize="20sp"
                android:inputType="number"
                android:background="@drawable/edittext_shape"
                android:layout_margin="10dp"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@id/create_account_phone"
                >
            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/create_account_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="36dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/button_shape"
                android:padding="15dp"
                android:text="create"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintLeft_toRightOf="@id/create_account_btn"
                app:layout_constraintTop_toBottomOf="@id/create_account_licence"
                android:textColor="@color/white"
                android:textSize="18dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cancel_account_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="72dp"
                android:textColor="@color/white"
                android:background="@drawable/button_shape"
                android:padding="15dp"
                android:text="cancel"
                android:textSize="18dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@id/create_account_btn"
                app:layout_constraintTop_toBottomOf="@id/create_account_licence">
            </androidx.appcompat.widget.AppCompatButton>
            <ProgressBar
                android:id="@+id/cp_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>